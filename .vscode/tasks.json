{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "build server",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++11",
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"-g",
				"net/EllConn.cpp",
				"net/EasyEllConn.cpp",
				"net/EllBaseServer.cpp",
				"server.cpp",
				"-o",
				"${workspaceFolder}/server",
				"-I",
				"${workspaceFolder}/net",
				"-I",
				"${workspaceFolder}/common",
				"-I",
				"${workspaceFolder}",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/clang++"
		},
		{
